<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/icons8_conference_50"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icons8_conference_50"
        android:supportsRtl="true"
        android:theme="@style/Theme.SocialLearningApplication"
        tools:targetApi="31">
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-3940256099942544~3347511713" /> <!-- test app id -->

        <activity android:name=".ui.onboarding.OnboardingActivity"
            tools:ignore="Instantiatable" />
        <activity android:name=".ui.main.ProfileFragment"
            tools:ignore="Instantiatable" />
        <activity android:name=".ui.auth.AuthActivity"
            tools:ignore="Instantiatable" />
        <activity android:name=".ui.main.TaskEditFragment"
            tools:ignore="Instantiatable" />
        <activity android:name=".ui.main.TaskFragment"
            tools:ignore="Instantiatable" />
        <activity android:name=".ui.main.QuizFragment"
            tools:ignore="Instantiatable" />
        <activity android:name=".ui.auth.LoginActivity"
            tools:ignore="IntentFilterExportedReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".ui.auth.RegisterActivity"/>
        <activity android:name=".ui.main.MainActivity"/>
    </application>

</manifest>