<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/quizFragment">
    <fragment
        android:id="@+id/quizStartFragment"
        android:name="com.rzjaffery.sociallearningapplication.ui.quiz.QuizStartFragment"
        android:label="Quiz Start"
        tools:layout="@layout/fragment_quiz_start">
        <action
            android:id="@+id/action_quizStart_to_quiz"
            app:destination="@id/quizFragment" />
    </fragment>
    <action
        android:id="@+id/action_quizStartFragment_to_quizFragment"
        app:destination="@id/quizFragment" />
    <action
        android:id="@+id/action_quizFragment_to_resultFragment"
        app:destination="@id/resultFragment" />

    <fragment
        android:id="@+id/resultFragment"
        android:name="com.rzjaffery.sociallearningapplication.ui.quiz.ResultFragment"
        android:label="ResultFragment" >
        <action
            android:id="@+id/action_resultFragment_to_quizFragment"
            app:destination="@id/quizFragment" />
    </fragment>

    <fragment
        android:id="@+id/quizFragment"
        android:name="com.rzjaffery.sociallearningapplication.ui.quiz.QuizFragment"
        android:label="Quiz"
        tools:layout="@layout/fragment_quiz">

        <action
            android:id="@+id/action_quiz_to_history"
            app:destination="@id/quizHistoryFragment" />
    </fragment>

    <fragment
        android:id="@+id/quizHistoryFragment"
        android:name="com.rzjaffery.sociallearningapplication.ui.quiz.QuizHistoryFragment"
        android:label="History" />
    <fragment
        android:id="@+id/tasksFragment"
        android:name="com.rzjaffery.sociallearningapplication.ui.main.TaskFragment"
        android:label="Tasks" />
    <fragment
        android:id="@+id/chatFragment"
        android:name="com.rzjaffery.sociallearningapplication.ui.main.ChatFragment"
        android:label="Chat" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.rzjaffery.sociallearningapplication.ui.main.ProfileFragment"
        android:label="Profile" />
</navigation>
